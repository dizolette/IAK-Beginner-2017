<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.belajarxml.MainActivity"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:weightSum="2"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:onClick="ubahTempatLokasi"
            android:id="@+id/gambar_pantai"
            android:scaleType="centerCrop"
            android:src="@drawable/pantai"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:onClick="ubahTempatLokasi"
            android:id="@+id/gambar_borobudur"
            android:scaleType="centerCrop"
            android:src="@drawable/borobudur"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="NAMA TEMPAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nama_tempat"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="25sp"
            android:text="nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="LOKASI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lokasi"
            android:gravity="center"
            android:textStyle="italic"
            android:textSize="25sp"
            android:text="lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:onClick="btnShare"
        android:text="Share"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>
